{
  "compilerOptions": {
    /* Directorios */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Configuraci√≥n de entorno */
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* Opciones de salida */
    "sourceMap": true,

    /* Reglas de chequeo estricto */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    /* Otras configuraciones */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
